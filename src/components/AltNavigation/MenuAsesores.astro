    @click="open = !open"
    :class="open ? 'bg-black text-white' : 'bg-white text-black'"
    class="p-2 rounded-xl border-2 border-black transition-colors duration-300 hover:bg-black hover:text-white flex flex-row gap-1 justify-center items-center"
