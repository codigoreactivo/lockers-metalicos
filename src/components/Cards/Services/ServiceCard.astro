---
import { Image } from "astro:assets";
import CallButtom from "../Global/Buttons/CallButtom.astro";
const { service } = Astro.props;
---

<div class="bg-white rounded-xl h-full flex flex-col">
    <div class="flex flex-col items-center justify-center w-full">
        <Image
            width="500"
            height="500"
            src={service.image}
            alt={service.alt}
            class="rounded-t-xl aspect-square object-cover"
        />
    </div>
    <div class="flex flex-col flex-grow h-full pb-4">
        <div class="flex flex-col p-4 gap-2 flex-grow">
            <h2 class="text-2xl uppercase font-medium">{service.title}</h2>
            <p class="text-gray-500">{service.description}</p>
        </div>
        <div class="p-4 mt-auto">
            <CallButtom />
        </div>
    </div>
</div>
