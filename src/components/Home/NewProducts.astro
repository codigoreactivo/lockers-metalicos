---
const { newProductsData } = Astro.props;
import ProductCard from "../Cards/Products/ProductCard.astro";
---

<section class="w-full mx-auto py-6">
  <div class="container mx-auto">
    <h2 class="text-center text-4xl font-medium">Nuevos Ingresos</h2>
    <div
      class="grid grid-cols-2 lg:grid-cols-4 gap-4 items-center justify-center px-2 py-4 lg:px-0"
    >
      {
        newProductsData.length > 0 ? (
          newProductsData
            .slice(0, 4)
            .map((product: any) => <ProductCard product={product} />)
        ) : (
          <p>No products available.</p>
        )
      }
    </div>
  </div>
</section>
