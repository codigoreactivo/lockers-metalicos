---
import "@fontsource-variable/oswald";
import NavBar from "../components/Header/NavBar.astro";
import Footer from "../components/Footer/Footer.astro";
import GTMHead from "../components/Analytics/GTMHead.astro";
import GTMBody from "../components/Analytics/GTMBody.astro";
import WaChat from "../components/FloatingButtons/WhatsApp/WaComponent";
import Tawkto from "../components/FloatingButtons/Tawkto.astro";

interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <GTMHead />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/faviconfbs.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={keywords} />
    <title>{title}</title>
  </head>
  <body>
    <GTMBody />
    <NavBar />
    <Tawkto />
    <slot />
    <WaChat client:load />
    <Footer />
  </body>
</html>
<style is:global>
  /* Ocultar flechas en Chrome, Safari, Edge, Opera */
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  /* Ocultar flechas en Firefox */
  input[type="number"] {
    -moz-appearance: textfield;
  }
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .btn-link {
    cursor: pointer;
    font-size: 1.1rem;
    text-align: center;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Oswald Variable", sans-serif;
  }

  .oswald {
    font-family: "Oswald Variable", sans-serif;
  }
</style>
